---
// Login page - Password authentication
import AuthLayout from '@/layouts/AuthLayout.astro';
---

<AuthLayout title="Sign In">
    <div class="auth-container">
        <div class="auth-card">
            <h1>Sign In with Password</h1>
    <p>Enter your email and password to get started.</p>
    
    <form id="login-form" method="post">
        <div>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div id="twofa-section" style="display: none;">
            <label for="twofa-code">Authenticator Code</label>
            <input type="text" id="twofa-code" name="twofa-code" pattern="[0-9]*" maxlength="6" placeholder="123456" inputmode="numeric">
            <a id="use-recovery-link" href="#">Use a recovery code instead</a>
        </div>
        <a href="/forgot-password">Forgot Your Password?</a>
        <div id="turnstile-container"></div>
        <button type="submit">Log In</button>
        <p id="login-message"></p>
    </form>
    
    <div class="auth-links">
        <a href="/magic-login">Sign In with Magic Link</a>
        <a href="/register">Create an Account</a>
    </div>
    
    <!-- MINDFUL AUTH CDN SCRIPTS. DO NOT DELETE -->
    <script src="https://cdn.mindfulauth.com/astro/turnstile-init.js"></script>
    <script src="https://cdn.mindfulauth.com/astro/login.js"></script>
    </div>
    </div>
</AuthLayout>